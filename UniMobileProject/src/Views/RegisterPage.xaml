<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniMobileProject.src.Views.RegisterPage"
             Title="Register">
    <StackLayout Padding="30" Spacing="20">
        <Label Text="Register" FontSize="32" HorizontalOptions="Center" />

        <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
        <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="UsernameEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PhoneNumberEntry" Placeholder="Phone Number" Keyboard="Telephone" />

        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

        <Button Text="Register" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>