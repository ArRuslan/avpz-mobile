<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniMobileProject.src.Views.HotelDetailsPage"
             Title="Hotel Details">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Hotel Details" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="Name:" FontSize="18" FontAttributes="Bold" />
            <Label x:Name="HotelNameLabel" FontSize="16" />

            <Label Text="Address:" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label x:Name="HotelAddressLabel" FontSize="16" />

            <Label Text="Description:" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label x:Name="HotelDescriptionLabel" FontSize="16" />

            <Button Text="View Rooms" 
                    Margin="0,20,0,0"
                    Clicked="OnViewRoomsClicked" />
        </StackLayout>
    </ScrollView>

</ContentPage>
