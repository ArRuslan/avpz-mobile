<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniMobileProject.src.Views.UserBookingsPage"
             Title="UserBookingsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <VerticalStackLayout>
        
        <Label 
            x:Name="NoBookingsMessage"
            Text="You haven't booked any room yet"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="{DynamicResource QuaternaryColor}"/>
        <ListView x:Name="MyBookingsListView" IsPullToRefreshEnabled="True" ItemTapped="MyBookingsListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">
                            <Label Text="{Binding CheckIn}" FontSize="16"></Label>
                            <Label Text="{Binding CheckOut}" FontSize="16"></Label>
                            <Label Text="{Binding TotalPrice, StringFormat='Price: {0:C}'}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </VerticalStackLayout>
</ContentPage>