<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UniMobileProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UniMobileProject.src.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="UniMobileProject">

    <ShellContent 
        Title="Login" 
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />
    <ShellContent 
        Title="Register" 
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="register" />
    <ShellContent 
        Title="My Profile" 
        ContentTemplate="{DataTemplate local:UserProfilePage}"
        Route="myprofile" />
    <ShellContent 
        Title="Main" 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="main" />
    <ShellContent 
        Title="Bookings" 
        ContentTemplate="{DataTemplate local:UserBookingsPage}"
        Route="mybookings" />
    <ShellContent 
        Title="Rooms" 
        ContentTemplate="{DataTemplate local:RoomsPage}" 
        Route="rooms" />

</Shell>
