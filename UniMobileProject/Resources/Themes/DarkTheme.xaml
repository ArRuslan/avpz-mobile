<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniMobileProject.Resources.Themes.DarkTheme">

    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="NavigationBarColor">#1e1e1e</Color>

    <Color x:Key="PrimaryColor">#0e3f88</Color>
    <Color x:Key="SecondaryColor">#2b2b2b</Color>
    <Color x:Key="TertiaryColor">#1e1e1e</Color>
    <Color x:Key="QuaternaryColor">#ffffff</Color>

    <Color x:Key="PrimaryTextColor">#ffffff</Color>
    <Color x:Key="SecondaryTextColor">#1e1e1e</Color>
    <Color x:Key="TertiaryTextColor">#e0e0e0</Color>
    <Color x:Key="QuaternaryTextColor">#9f9f9f</Color>

    <Color x:Key="TransparentColor">Transparent</Color>

    <!-- Кольори статусів -->
    <Color x:Key="PendingStatusColor">#d58300</Color>
    <Color x:Key="ActiveStatusColor">#65c368</Color>
    <Color x:Key="CancelledStatusColor">#acacac</Color>
    <Color x:Key="ExpiredStatusColor">#a51b0b</Color>
    <Color x:Key="AllStatusColor">#121212</Color>

    <x:String x:Key="FilterIconSource">filter_icon_dark.png</x:String>

</ResourceDictionary>